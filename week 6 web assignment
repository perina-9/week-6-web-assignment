  <h1>Welcome to My Interactive Page</h1>

  <!-- Light/Dark Mode Toggle -->
  <button id="themeToggle">Toggle Light/Dark Mode</button>

  <!-- Counter Game -->
  <div>
    <h2>Counter: <span id="counter">0</span></h2>
    <button id="incrementBtn">Increment</button>
    <button id="resetBtn">Reset</button>
  </div>

  <!-- Collapsible FAQ -->
  <div class="faq">
    <h2>FAQ</h2>
    <div class="faq-item">
      <button class="faq-question">What is JavaScript?</button>
      <div class="faq-answer">JavaScript is a programming language used to make web pages interactive.</div>
    </div>
  </div>

  <!-- Form Section -->
  <form id="signupForm">
    <h2>Sign Up</h2>
    <label>Name: <input type="text" id="name" /></label><br />
    <label>Email: <input type="email" id="email" /></label><br />
    <label>Password: <input type="password" id="password" /></label><br />
    <button type="submit">Submit</button>
    <div id="formMessages"></div>
  </form>

  <script src="script.js"></script>
